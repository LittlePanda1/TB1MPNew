<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/admin">

    <!--
      Tinggi match_parent + gravity bottom|center_horizontal
      bikin konten otomatis “didorong” ke bawah layar,
      tapi karena fillViewport, ScrollView tetap bisa discroll.
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom|center_horizontal"
        android:padding="20dp">

        <!-- Field Nama Toko -->
        <EditText
            android:id="@+id/uploadStore"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/lavender_border"
            android:hint="Masukkan Nama Toko"
            android:padding="16dp"
            android:textColor="@color/lavender"/>

        <!-- Field Nama Barang -->
        <EditText
            android:id="@+id/uploadName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/lavender_border"
            android:hint="Masukkan Nama Barang"
            android:padding="16dp"
            android:textColor="@color/lavender"/>

        <!-- Field Jumlah Barang -->
        <EditText
            android:id="@+id/uploadOperator"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/lavender_border"
            android:hint="Masukkan Jumlah Barang"
            android:padding="16dp"
            android:textColor="@color/lavender"/>

        <!-- Field Harga Barang -->
        <EditText
            android:id="@+id/uploadLocation"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/lavender_border"
            android:hint="Masukkan Harga Barang"
            android:padding="16dp"
            android:textColor="@color/lavender"/>

        <!-- Field Satuan Barang -->
        <EditText
            android:id="@+id/uploadPhone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/lavender_border"
            android:hint="Masukkan Satuan Barang"
            android:padding="16dp"
            android:textColor="@color/lavender"/>

        <!-- Tombol Simpan -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/lavender"
            android:text="Simpan"
            android:textSize="18sp"
            app:cornerRadius="20dp"/>
    </LinearLayout>
</ScrollView>